# Production Environment Configuration
# IMPORTANT: Update all secrets before deploying to production!

# Database Configuration
DATABASE_URL="postgresql://postgres:password@postgres:5432/cupperly"
POSTGRES_DB="cupperly"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="CHANGE_THIS_IN_PRODUCTION"
POSTGRES_PORT="15432"

# Redis Configuration
REDIS_URL="redis://redis:6379"

# JWT Configuration
JWT_SECRET="CHANGE_THIS_TO_RANDOM_SECRET_IN_PRODUCTION"
JWT_REFRESH_SECRET="CHANGE_THIS_TO_RANDOM_REFRESH_SECRET_IN_PRODUCTION"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="CHANGE_THIS_TO_RANDOM_NEXTAUTH_SECRET_IN_PRODUCTION"

# API Configuration
API_URL="http://api:3001"
NEXT_PUBLIC_API_URL="http://localhost:3001"
API_PORT="3001"

# Web Configuration
WEB_PORT="3000"

# Stripe Configuration (for SaaS billing)
STRIPE_SECRET_KEY="sk_live_your_production_key"
STRIPE_PUBLISHABLE_KEY="pk_live_your_production_key"
STRIPE_WEBHOOK_SECRET="whsec_production_webhook"

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID="your-production-access-key"
AWS_SECRET_ACCESS_KEY="your-production-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="cupperly-prod-files"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@domain.com"
SMTP_PASS="your-email-password"
FROM_EMAIL="noreply@cupperly.com"

# Application Configuration
NODE_ENV="production"
PORT="3001"

# Multi-tenancy Configuration
DEFAULT_TENANT="demo"
TENANT_SUBDOMAIN_ENABLED="true"

# Feature Flags
ENABLE_VOICE_TRANSCRIPTION="true"
ENABLE_REAL_TIME_COLLABORATION="true"
ENABLE_ANALYTICS="true"

# Security Configuration
BCRYPT_ROUNDS="12"
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Logging Configuration
LOG_LEVEL="info"
LOG_FORMAT="combined"

