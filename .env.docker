# Docker Compose Environment Variables
# Use this when running with docker-compose

# Database Configuration - Use service name 'postgres' for Docker networking
DATABASE_URL="postgresql://postgres:password@postgres:5432/cupperly"

# Redis Configuration - Use service name 'redis' for Docker networking
REDIS_URL="redis://redis:6379"

# JWT Configuration
JWT_SECRET="dev-jwt-secret-change-in-production"
JWT_REFRESH_SECRET="dev-refresh-secret-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="dev-nextauth-secret-change-in-production"

# API Configuration - For frontend to connect to API
API_URL="http://localhost:3001"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Stripe Configuration (for SaaS billing)
STRIPE_SECRET_KEY="sk_test_development_key"
STRIPE_PUBLISHABLE_KEY="pk_test_development_key"
STRIPE_WEBHOOK_SECRET="whsec_development_webhook"

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID="development-access-key"
AWS_SECRET_ACCESS_KEY="development-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="cupperly-dev-files"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="dev@cupperly.com"
SMTP_PASS="dev-password"
FROM_EMAIL="noreply@cupperly.com"

# Application Configuration
NODE_ENV="development"  # IMPORTANT: Must be development for localhost CORS
PORT="3001"
WEB_PORT="3000"

# Multi-tenancy Configuration
DEFAULT_TENANT="demo"
TENANT_SUBDOMAIN_ENABLED="true"

# Feature Flags
ENABLE_VOICE_TRANSCRIPTION="true"
ENABLE_REAL_TIME_COLLABORATION="true"
ENABLE_ANALYTICS="true"

# Security Configuration
BCRYPT_ROUNDS="10"
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="1000"

# Logging Configuration
LOG_LEVEL="debug"
LOG_FORMAT="dev"

